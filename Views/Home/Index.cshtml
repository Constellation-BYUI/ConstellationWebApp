<div class="container-fluid padding">
    <!--- Image Slider -->
    <div class="col-md-12 carousel slide" data-ride="carousel" id="slider">
        <!-- Indicators -->
        <ul class="carousel-indicators">
            <li data-target="#slider" data-slide-to="0"></li>
            <li data-target="#slider" data-slide-to="1" class="active"></li>
            <li data-target="#slider" data-slide-to="2"></li>
        </ul>
        <!-- The slideshow -->
        <div class="carousel-inner">
            <div class="carousel-item ">
                <img class="img-thumbnail" src="~/image/cit2.jpg" alt="webImage" />

            </div>

            <div class="carousel-item active">
                <img class="img-thumbnail" src="~/image/cit3.jpg" alt="webImage" />
                <div class="carousel-caption">
                    <h1>WELCOME</h1>
                    <h4>Share your Projects with the right audience.</h4>
                    <a class="btn btn-md btn-primary border-light" asp-controller="Projects" asp-action="Index">View Projects</a>
                    <a class="btn btn-md btn-success border-light" asp-controller="account" asp-action="register">Register</a>

                </div>
            </div>

            <div class="carousel-item">
                <img class="img-thumbnail" src="~/image/cit.jpg" alt="webImage" />
            </div>

            <!-- Left and right controls -->
            <a class="carousel-control-prev" href="#slider" data-slide="prev">
                <span class="carousel-control-prev-icon"></span>
            </a>
            <a class="carousel-control-next" href="#slider" data-slide="next">
                <span class="carousel-control-next-icon"></span>
            </a>
        </div>
    </div>
</div>
<!--- Jumbotron -->
<div class="container-fluid m-1">
    <div class="container-fluid shadow-lg bg-light col-md-12 jumbotron m-2 p-1 text-center">
        <h3>Bring exposure to your ideas and make them available to people that matter.</h3>
        <a class="btn btn-primary btn-md" asp-controller="Projects" asp-action="Create">Post Projects</a>
    </div>
</div>

<!--- Fixed background -->
<figure>
    <div class="fixed-wrap">
        <div id="fixed"></div>
    </div>
</figure>