@model ConstellationWebApp.Models.User
@using System.Security.Claims;


@{
    ViewData["Title"] = "Details";
    var photoPath = "~/image/" + Model.PhotoPath;
    var resumePath = "https://localhost:44359/Resumes/" + (Model.ResumePhotoPath);
    var currentUser = this.User.FindFirstValue(ClaimTypes.NameIdentifier);

}
                                            @*User Profile Heading Card*@
<div class="container">
    <div class="col-md-10 px-0">
        <div class="card bg-primary text-center text-white shadow padding sticky-top">
            <h3>@Html.DisplayFor(model => model.FirstName)  @Html.DisplayFor(model => model.LastName)'s Profile</h3>
        </div>
    </div>
</div>
                                            @*User Profile Card Display*@
    <aside>
        <div class="container padding">
            <div class="col-md-10">
                <div class="card text-black-50 text-white  bg-light mb-3 padding">
                    <div>
                        <img class="img-thumbnail mx-auto d-block" src="@photoPath" asp-append-version="true" />
                    </div>
                    <div>
                        <a href="@resumePath">  @Html.DisplayFor(model => model.UserName)'s Resume</a>
                    </div>
                    <div>
                        @Html.DisplayNameFor(model => model.UserName)
                        @Html.DisplayFor(model => model.UserName)
                    </div>
                    <div>
                        @Html.DisplayNameFor(model => model.FirstName)
                        @Html.DisplayFor(model => model.FirstName)
                    </div>
                    <div>
                        @Html.DisplayNameFor(model => model.LastName)
                        @Html.DisplayFor(model => model.LastName)
                    </div>
                    <div>
                        @Html.DisplayNameFor(model => model.Bio)
                        @Html.DisplayFor(model => model.Bio)
                    </div>
                    <div>
                        @Html.DisplayNameFor(model => model.Seeking)
                        @Html.DisplayFor(model => model.Seeking)
                    </div>
                    <h4>Contact Links</h4>
                    @foreach (var contactLink in Model.ContactLinks)
                    {
                        <div class="card-link">
                            @Html.DisplayFor(modelItem => contactLink.ContactLinkLabel) :
                            @Html.DisplayFor(modelItem => contactLink.ContactLinkUrl)
                        </div>
                        <br />
                    }
                    @if (currentUser == Model.Id)
                    {
                        <div class="card-footer">
                            <a class="btn btn-md btn-primary" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
                            <a class="btn btn-md btn-secondary" asp-action="Index">Back to List</a>
                        </div>
                    }
                    else
                    {
                        <div class="card-footer">
                            <a class="btn btn-md btn-secondary" asp-action="Index">Back to List</a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </aside>
                                            @*User Projects Heading Card*@
    <div class="container">
        <div class="col-md-10 px-0">
            <div class="card bg-primary text-center text-white shadow padding sticky-top">
                <h3>@Html.DisplayFor(model => model.FirstName)  @Html.DisplayFor(model => model.LastName)'s Projects</h3>
            </div>
        </div>
    </div>

                                              @*User Project Card Display*@
    <div>
        @foreach (var userProject in Model.UserProjects)
        {
            var projectPhotoPath = "~/image/" + (userProject.Project.PhotoPath);
            var projectPath = "https://localhost:44359/Projects/Details/" + (userProject.Project.ProjectID);
            var projectId = (userProject.Project.ProjectID);

            <div class="container padding">
                <div class="col-md-10">
                    <div class="card text-black-50 text-white  bg-light mb-3 padding">
                        @*Note: We do not want to display the PhotoPath Path but the image itself*@
                        <div>
                            <a href="@projectPath"><img class="img-thumbnail mx-auto d-block" src=" @projectPhotoPath" alt="@Html.DisplayFor(modelItem => userProject.Project.Title)" asp-append-version="true" /></a>
                        </div>
                        <div>
                            @Html.DisplayNameFor(modelItem => userProject.Project.Title) :
                            @Html.DisplayFor(modelItem => userProject.Project.Title)
                        </div>
                        <div>
                            @Html.DisplayNameFor(modelItem => userProject.Project.Description) :
                            @Html.DisplayFor(modelItem => userProject.Project.Description)
                        </div>
                        <div>
                            @Html.DisplayNameFor(modelItem => userProject.Project.StartDate) :
                            @Html.DisplayFor(modelItem => userProject.Project.StartDate)
                        </div>
                        <div>
                            @Html.DisplayNameFor(modelItem => userProject.Project.EndDate) :
                            @Html.DisplayFor(modelItem => userProject.Project.EndDate)
                        </div>
                        <div>
                            @Html.DisplayNameFor(modelItem => userProject.Project.CreationDate) :
                            @Html.DisplayFor(modelItem => userProject.Project.CreationDate)
                        </div>

                        <h4>Collaborators</h4>

                        @foreach (var collab in ViewBag.collaborators)
                        {
                            if ((userProject.UserID != collab.UserID) && (userProject.ProjectID == collab.ProjectID))
                            {
                                var collabPath = "~/image/" + (collab.User.PhotoPath);
                                var collabMemberPath = "https://localhost:44359/Users/Details/" + (collab.UserID);

                                <a href="@collabMemberPath"><img class="small-thumbnail" src=" @collabPath" asp-append-version="true" /></a>
                            }

                        }



                        <h4>Project Links</h4>
                        @foreach (var link in userProject.Project.ProjectLinks)
                        {
                            <a class="card-link" href=" @Html.DisplayFor(modelItem => link.ProjectLinkUrl)" target="_blank">@Html.DisplayFor(modelItem => link.ProjectLinkLabel)</a>
                            <br />
                        }

                        <div class="card-footer">
                            <a class="btn btn-md btn-primary" href="@projectPath">View Project</a>
                        </div>
                    </div>
                </div>
            </div>

        }
    </div>


