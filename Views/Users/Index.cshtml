@model ConstellationWebApp.Models.ViewModel
@using System.Security.Claims;


@{
    ViewData["Title"] = "Index";
    var currentUser = this.User.FindFirstValue(ClaimTypes.NameIdentifier);
}

    <div class="container col-md-6 rounded shadow ">
        <h3 class="text-black-50 text-center mt-2 py-3 py-sm-2">Users of Constellation</h3>
    </div>
   
    <div class="card-columns">
        @foreach (var item in Model.Users)
        {
            if (item.displayMyProfile == true)
            {
                var photoPath = "~/image/" + (item.PhotoPath);


                @*CSS RULES FOR INDIVIDUAL CARDS*@
        <div class="card shadow-lg text-black m-2 padding">
            @*Note: We do not want to display the PhotoPath Path but the image itself*@
            <div>
                <img style="height: 300px; width: 100%; display: block;" src=" @photoPath" alt="@Html.DisplayFor(modelItem => item.UserName)" asp-append-version="true" />
            </div>
            <div class="card-body">
                <div>
                    <strong class="text-warning">
                        @Html.DisplayNameFor(modelItem => item.UserName) :
                    </strong>
                    @Html.DisplayFor(modelItem => item.UserName)
                </div>
                <div>
                    <strong class="text-warning">
                        @Html.DisplayNameFor(modelItem => item.FirstName) :
                    </strong>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </div>
                <div>
                    <strong class="text-warning">
                        @Html.DisplayNameFor(modelItem => item.LastName) :
                    </strong>
                    @Html.DisplayFor(modelItem => item.LastName)

                </div>
                <div>
                    <strong class="text-warning">
                        @Html.DisplayNameFor(modelItem => item.Bio) :
                    </strong>
                    @Html.DisplayFor(modelItem => item.Bio)

                </div>
                <div>
                    <strong class="text-warning">
                        @Html.DisplayNameFor(modelItem => item.Seeking) :
                    </strong>
                    @Html.DisplayFor(modelItem => item.Seeking)

                </div>
            </div>
            <section style="margin-bottom: 3em;">
                <h4 class="card-title bg-light container py-1 mb-1 shadow text-primary rounded">Contact Links</h4>
                @foreach (var link in item.ContactLinks)
                {
                    <div class="card-link">
                        <strong class="text-warning">
                            @Html.DisplayFor(modelItem => link.ContactLinkLabel) :
                        </strong>
                        @Html.DisplayFor(modelItem => link.ContactLinkUrl)
                    </div>
                    <br />
                }
            </section>
            <section class="text-left">
                @{
                    if (item.Id == currentUser)
                    {
                        <div class="card-footer">
                            <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                            <a class="btn btn-sm btn-secondary" asp-action="Details" asp-route-id="@item.Id">Details</a>

                        </div>
                    }
                    else
                    {
                        <div class="card-footer">
                            <a class="btn btn-sm btn-secondary" asp-action="Details" asp-route-id="@item.Id">Details</a>
                        </div>
                    }
                }
            </section>
        </div>

            }
        }

    </div>
