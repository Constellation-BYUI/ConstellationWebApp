@model ConstellationWebApp.Models.ViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Users Index</h1>

@foreach (var item in Model.Users)
{
    if (item.displayMyProfile == true){
        var photoPath = "~/image/" + (item.PhotoPath);

<div class="project-cards">
    @*Note: We do not want to display the PhotoPath Path but the image itself*@
    <div>
        <img class="imageThumbnail" src=" @photoPath" alt="@Html.DisplayFor(modelItem => item.UserName)" asp-append-version="true" />
    </div>
    <div>
        @Html.DisplayNameFor(modelItem => item.UserName) :
        @Html.DisplayFor(modelItem => item.UserName)
    </div>
    <div>
        @Html.DisplayNameFor(modelItem => item.FirstName) :
        @Html.DisplayFor(modelItem => item.FirstName)
    </div>
    <div>
        @Html.DisplayNameFor(modelItem => item.LastName) :
        @Html.DisplayFor(modelItem => item.LastName)

    </div>
    <div>
        @Html.DisplayNameFor(modelItem => item.Bio) :
        @Html.DisplayFor(modelItem => item.Bio)

    </div>
    <div>
        @Html.DisplayNameFor(modelItem => item.Seeking) :
        @Html.DisplayFor(modelItem => item.Seeking)

    </div>
    <h4>Contact Links</h4>
    @foreach (var link in item.ContactLinks)
    {
<div>
    @Html.DisplayFor(modelItem => link.ContactLinkLabel) :
    @Html.DisplayFor(modelItem => link.ContactLinkUrl)
</div>
        <br />
    }

    <div>
        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
    </div>
</div>
    }
}
