    <div class="flex-container">
        <div class="filter-section">
            <h4>Filter</h4>

            <form asp-action="Index" asp-controller="Users" class="name-search">
                <p>Name</p>
                <div class="group">
                    <input type="search" placeholder="search by name..."><button type="submit"><i class="fas fa-search"></i></button>
                </div>
            </form>

            <form asp-action="Index" asp-controller="Users" class="disc-search">
                <p>Discipline</p>
                <div class="group">
                    <input type="search" placeholder="search by descipline..."><button type="submit"><i class="fas fa-search"></i></button>
                </div>
            </form>

            <form asp-action="Index" asp-controller="Users" class="title-search">
                <p>Skill</p>
                <div class="group">
                    <input type="search" placeholder="search by skill..."><button type="submit"><i class="fas fa-search"></i></button>
                </div>
            </form>
        </div>


        <div class="card-section">
               <datalist id="disciplines-List">
