@model ConstellationWebApp.Models.ViewModels.UserEditViewModel
@using System.Security.Claims;


@{
    ViewData["Title"] = "Edit User";

    var photoPath = "~/image/" + (Model.OldPhotoPath);
    var currentUser = this.User.FindFirstValue(ClaimTypes.NameIdentifier);

}

@if (currentUser == Model.UserID)
{
    <h1>Edit User</h1>

    <div class="row padding">
        <div class="col-md-10">
            @{
                <img style="height: 500px; width: 100%; display: block;" src=" @photoPath" alt="@Html.DisplayFor(model => model.UserName)" asp-append-version="true" />
            }
        </div>
    </div>

    <hr />
    <div class="container padding">
        <div class="row padding">
            <div class="col-md-10">
                <div class="card text-black-50 text-white  bg-light mb-3 padding">
                    <form enctype="multipart/form-data" asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="UserID" />
                        <input type="hidden" asp-for="OldPhotoPath" />
                        <input type="hidden" asp-for="OldResumePath" />
                        <div class="form-group">
                            <label asp-for="UserName" class="control-label"></label>
                            <input asp-for="UserName" class="form-control" />
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="FirstName" class="control-label"></label>
                            <input asp-for="FirstName" class="form-control" />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="LastName" class="control-label"></label>
                            <input asp-for="LastName" class="form-control" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Bio" class="control-label"></label>
                            <input asp-for="Bio" class="form-control" />
                            <span asp-validation-for="Bio" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Seeking" class="control-label"></label>
                            <input asp-for="Seeking" class="form-control" />
                            <span asp-validation-for="Seeking" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="displayMyProfile" class="control-label">Do you want your Profile visible to others?</label>
                            @Html.CheckBoxFor(m => m.displayMyProfile)
                        </div>
                        <div class="form-group row">
                            <label asp-for="Photo" class="col-sm-2 col-form-label"></label>
                            <div class="col-sm-10">
                                <div class="custom-file">
                                    <input asp-for="Photo" class="form-control custom-file-input" />
                                    <label class="custom-file-label">Choose File ...</label>
                                </div>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label asp-for="ResumeUpload" class="col-sm-2 col-form-label"></label>
                            <div class="col-sm-10">
                                <div class="custom-file">
                                    <input asp-for="ResumeUpload" class="form-control custom-file-input" />
                                    <label class="custom-file-label">Upload Resume (pdf)...</label>
                                </div>
                            </div>
                        </div>


                        @* Create the Contact Links for the User *@
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <h4>Link Label</h4>
                                <input list='contact-link-label' name='createdLinkLabels'>
                                <h4>Link URL</h4>
                                <input list='contact-link-url' name='createdLinkUrls'>

                                <div id="demo"></div>
                                <input type="button" id="more_fields" onclick="add_fields();" value="Add Link" />
                            </div>
                        </div>

                        <div class="card-footer">
                            <button type="submit" value="Update" class="btn btn-primary">Update</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="row padding">
        <div class="col-md-10">
            <div class="card bg-light mb-3 padding">
                <div class="card-footer">
                    <a class="btn btn-sm btn-secondary" asp-action="Index">Back to List</a>
                    <a class="btn btn-md btn-danger" asp-action="Delete" asp-route-id="Model.Id">Delete</a>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <h2>You do not own this account, Log In as this User to Edit.</h2>
    <a class="btn btn-sm btn-secondary" asp-action="Index">Back to List</a>
}

@section Scripts {
    <script>
        $(document).ready(function () {
            $('.custom-file-input').on("change", function () {
                var fileName = $(this).val().split("\\").pop();
                $(this).next('.custom-file-label').html(fileName);
            });
        });
    </script>

    <script>
        function add_fields() {
            document.getElementById("demo").innerHTML += "<h2>Link Label</h2><input list='contact-link-label' name='createdLinkLabels'><h2>Link URL</h2> <input list='contact-link-url' name='createdLinkUrls'>";
        }
    </script>
    @*@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}*@
}
