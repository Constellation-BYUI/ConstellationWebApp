@model ConstellationWebApp.Models.ViewModels.UserEditViewModel
@using System.Security.Claims;


@{
    ViewData["Title"] = "Edit User";
    var photoPath = "~/image/" + (Model.OldPhotoPath);
    var currentUser = this.User.FindFirstValue(ClaimTypes.NameIdentifier);
}



@if (currentUser == Model.UserID)
{
    <div class="container">
        <div class="col-md-10 px-0">
            <div class="card bg-primary text-center text-white shadow padding sticky-top">
                <h3>Edit User</h3>
            </div>
        </div>
    </div>



<div class="container padding ">
    <div class="col-md-10">
        <div class="card text-black-50 text-white  bg-light mb-3 padding">

            @*Note: We do not want to display the PhotoPath Path but the image itself*@
            <img style="height: 400px; width: 100%; display: block;" src=" @photoPath" alt="@Html.DisplayFor(model => model.UserName)" asp-append-version="true" />

            <form enctype="multipart/form-data" asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="UserID" />
                <input type="hidden" asp-for="OldPhotoPath" />
                <input type="hidden" asp-for="OldResumePath" />
                <div class="form-group">
                    <label asp-for="UserName" class="control-label"></label>
                    <input asp-for="UserName" class="form-control" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="FirstName" class="control-label"></label>
                    <input asp-for="FirstName" class="form-control" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="LastName" class="control-label"></label>
                    <input asp-for="LastName" class="form-control" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Bio" class="control-label"></label>
                    <input asp-for="Bio" class="form-control" />
                    <span asp-validation-for="Bio" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Seeking" class="control-label"></label>
                    <input asp-for="Seeking" class="form-control" />
                    <span asp-validation-for="Seeking" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="displayMyProfile" class="control-label">Do you want your Profile visible to others?</label>
                    @Html.CheckBoxFor(m => m.displayMyProfile)
                </div>
                <div class="form-group row">
                    <label asp-for="Photo" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <div class="custom-file">
                            <input asp-for="Photo" class="form-control custom-file-input" />
                            <label class="custom-file-label">Choose File ...</label>
                        </div>
                    </div>
                </div>


                @*Resume Upload Codes*@
                <div class="form-group row">
                    <label asp-for="ResumeUpload" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <div class="custom-file">
                            <input asp-for="ResumeUpload" class="form-control custom-file-input" />
                            <label class="custom-file-label">Upload Resume (pdf)...</label>
                        </div>
                    </div>
                </div>




                @* Create the Contact Links for the User *@
                <div class="form-group">
                    <div class="col-md-6">
                        <p class="mb-0 mt-1">Add Link Label</p>
                        <input class="input-group rounded border-light" list='contact-link-label' name='createdLinkLabels'>
                        <p class="mb-0 mt-1">Add Url Link</p>
                        <input  class="input-group rounded border-light" list='contact-link-url' name='createdLinkUrls'>
                        <div id="demo"></div>
                        <input class="text-light bg-secondary border-white rounded mt-1" type="button" id="more_fields" onclick="add_fields();" value="Add Link" />
                    </div>
                </div>



                <div class="card-footer">
                    <button type="submit" value="Update" class="btn btn-md btn-primary">Update</button>
                    <a class="btn btn-md btn-secondary" asp-action="Index">Back to List</a>
                    <a class="btn btn-md btn-danger" asp-action="Delete" asp-route-id="Model.Id">Delete</a>
                </div>
            </form>
        </div>
    </div>
</div>
}
else
{
    <h2>You do not own this account, Log In as this User to Edit.</h2>
    <a class="btn btn-md btn-secondary" asp-action="Index">Back to List</a>
}



@section Scripts {
    <script>
        $(document).ready(function () {
            $('.custom-file-input').on("change", function () {
                var fileName = $(this).val().split("\\").pop();
                $(this).next('.custom-file-label').html(fileName);
            });
        });
    </script>



    <script>
        function add_fields() {
            document.getElementById("demo").innerHTML += "<p class='mb-0 mt-1 rounded border-light'>Add Link Label</p><input class='input-group' list='contact-link-label' name='createdLinkLabels'><p class='mb-0 mt-1 rounded border-light'>Add Url Link</p><input class='input-group' list='contact-link-url' name='createdLinkUrls'>";
        }
    </script>
    @*@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}*@
}
