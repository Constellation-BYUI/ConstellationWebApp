@model ConstellationWebApp.Models.Posting
@using System.Security.Claims;
@{
    ViewData["Title"] = "Delete";
    var currentUser = this.User.FindFirstValue(ClaimTypes.NameIdentifier);
}



    <h3>Are you sure you want to delete this? This action will remove the posting from the site; no one will have access to any of its 
    information or connections once it is deleted.</h3>
    <div>
        <h4>Posting</h4>
        <hr />
        <dl class="row">
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.PostingTitle)
            </dd>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Description)
            </dd>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.PostingFor)
            </dd>
        </dl>


    <div class="col-md-7 col-sm-12 card shadow-lg mx-auto my-2">
        @if (currentUser == @Model.PostingOwner.Id)
        {
            <h1 class="text-center text-danger font-weight-bold">Delete</h1>

            <h3>Are you sure you want to <span class="text-danger">delete</span> this?</h3>
            <div>
                <h4 class="text-center">Post name</h4>
                <hr />
                <dl class="row">
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.PostingTitle)
                    </dd>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Description)
                    </dd>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.PostingFor)
                    </dd>
                </dl>

                <form asp-action="Delete" class="text-center my-2">
                    <input type="hidden" asp-for="PostingID" />
                    <input type="submit" value="Delete" class="btn btn-danger" /> |
                    <a asp-action="Index">Back to List</a>
                </form>
            </div>
        }
        else
        {
            <h2>You do not own this job posting, Log In as this User to Edit.</h2>
            <a class="btn btn-md btn-secondary" asp-action="Index">Back to List</a>
        }
    </div>
    
