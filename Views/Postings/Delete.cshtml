@model ConstellationWebApp.Models.Posting
@using System.Security.Claims;
@{
    ViewData["Title"] = "Delete";
    var currentUser = this.User.FindFirstValue(ClaimTypes.NameIdentifier);
}

    <div class="col-md-7 col-sm-12 card shadow-lg mx-auto my-2">
        @if (currentUser == @Model.PostingOwner.Id)
        {
            <h1 class="text-center text-danger font-weight-bold">Delete</h1>

            <h3 style="text-align: center">
                Are you sure you want to <span class="text-danger">delete</span> this Job Post? <br /> This action will <span class="text-danger">remove</span> the posting from the site;<br />
                no one will have access to any of its information or connections once it is deleted.  this?
            </h3>
            <div>
                <h4 class="text-center">Post name</h4>
                <hr />
                <dl class="row">
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.PostingTitle)
                    </dd>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Description)
                    </dd>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.PostingFor)
                    </dd>
                </dl>

                <form asp-action="Delete" class="text-center my-2">
                    <input type="hidden" asp-for="PostingID" />
                    <input type="submit" value="Delete" class="btn btn-md btn-danger" /> 
                    <a asp-action="Index" class="btn btn-md btn-secondary">Back to List</a>
                </form>
            </div>
        }
        else
        {
    <div class="col-md-7 col-sm-12 card shadow-lg mx-auto my-2">
        <h2>You do not own this job posting, Log In as this User to Edit.</h2>
        <a class="btn btn-md btn-secondary" asp-action="Index">Back to List</a>
    </div> 
        }
    </div>
    
