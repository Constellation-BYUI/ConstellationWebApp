@model ConstellationWebApp.Models.ViewModels.LoginViewModel
@{
    ViewBag.Title = "Login";
}
<link rel="stylesheet" href="~/css/login.css" />




<div class="log-container">
    <div class="login">
        <img class="userImage" src="/WebAssests/siteImages/userImage.png" alt="">

        <h2>Login</h2>

        <form asp-action="Login">
            <div asp-validation-summary="All" class="validate"></div>
            <div class="group">
                <input asp-for="Email" placeholder="Email" type="text"><i class="fas fa-user"></i>
                @*<span asp-validation-for="Email" class="validate"></span>*@
            </div>

            <div class="group">
                <input asp-for="Password" placeholder="password" type="password"><i class="fas fa-lock"></i>
                @*<span asp-validation-for="Password" class="validate"></span>*@
            </div>

            <input type="submit" class="btnn" value="Login" />
        </form>
        <p class="fs">Forgot <a href="#">Username</a> / <a href="#">password</a> ? </p>

        <p class="ss">Don't have an account ? <a href="#">SignUp</a></p>
    </div>

</div>





