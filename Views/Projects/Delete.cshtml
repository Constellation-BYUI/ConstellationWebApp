                        <div>
                            <h4>Project</h4>
                            <hr />
                            <img style="height: 600px; width: 100%; display: block; margin-bottom: 10px;" src=" @photoPath" alt="@Html.DisplayFor(model => model.Title)" asp-append-version="true" />

                            <dl class="row">
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.Title)
                                </dt>
                                <dd class="col-sm-10">
                                    @Html.DisplayFor(model => model.Title)
                                </dd>
                                <dt class="col-sm-2">
                                    @Html.DisplayNameFor(model => model.Description)
