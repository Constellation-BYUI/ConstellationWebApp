@* Create Project Page should be accesible from each user page and should be itegrated into thenavigation bar - it should automatically create a collaborator from the current user ID *@
@model ConstellationWebApp.Models.ViewModels.ProjectEditViewModel
@using System.Security.Claims;

@{
    ViewData["Title"] = "Edit Project";

    var photoPath = "~/image/" + Model.PhotoPath;
    var currentUser = this.User.FindFirstValue(ClaimTypes.NameIdentifier);
    bool canView = false;
    var thisProject = Model.ProjectID;
    var loggedOn = false;
    var assigned = false;
    var addShown = false;
    var deleteShown = false;
    bool kickOut = false;
}

@*Detemines if curretn user is a collaborator of Project*@
@foreach (var collaborator in Model.currentProject.UserProjects)
{
    if (collaborator.UserID == currentUser)
    {
        canView = true;
    }
}

@if (canView == true)
{
    <!-- #region Is a collaborator : intro-->
    <div class="container d-flex shadow justify-content-center padding">
        <h3>Edit Project</h3>
    </div>
    @*CSS CODE FOR INDIVISUAL CARDS STARTS HERE*@
    <div class="container d-flex justify-content-center padding">
        <div class="col-md-8 card shadow text-black-50 text-white  bg-light mb-3 padding">

            @*Displays the Project Photo*@
            <div>
                <img style="height: 300px; width: 100%; display: block;" src=" @photoPath" alt="@Html.DisplayFor(model => model.Title)" asp-append-version="true" />
            </div>
            <!-- #endregion -->
           
    @*Edit Project Entity Data*@
            <!-- #region Entity Project Property Edit Form -->
            <form asp-action="Edit" asp-controller="Projects" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="ProjectID" />
                <input type="hidden" asp-for="OldPhotoPath" />
                <div class="form-group">
                    <label asp-for="Title" class="control-label"></label>
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="StartDate" class="control-label"></label>
                    <input asp-for="StartDate" class="form-control" />
                    <span asp-validation-for="StartDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="EndDate" class="control-label"></label>
                    <input asp-for="EndDate" class="form-control" />
                    <span asp-validation-for="EndDate" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <label asp-for="Photo" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <div class="custom-file">
                            <input asp-for="Photo" class="form-control custom-file-input" />
                            <label class="custom-file-label">Replace Project Photo ...</label>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <datalist id="user-list">
                            @{
                                List<ConstellationWebApp.Models.AssignedProjectData> usersCollab = ViewBag.UsersOfConstellation;

                                foreach (var user in usersCollab)
                                {
                                    <option value="@user.UserName" data-id="@user.UserID"></option>
                                }
                            @:</datalist>
                        @:</div>
                            }
                        </div>

                        <input list="user-list" name="selectedCollaborators">

                        <div id="demo"></div>
                        <input type="button" id="more_fields" onclick="add_collab();" value="Add Collaborator" />

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <h4>Link Label</h4>
                                <input list='contact-link-label' name='createdLinkLabels'>
                                <h4>Link URL</h4>
                                <input list='contact-link-url' name='createdLinkUrls'>

                                <div id="linkDemo"></div>
                                <input type="button" id="more_fields" onclick="add_fields();" value="Add Link" />
                            </div>
                        </div>

                        <div class="card-footer">
                            <div class="form-group">
                                <button type="submit" value="Update" class="btn btn-md btn-primary">Update</button>
                                <a class="btn btn-md btn-danger" asp-action="Delete" asp-route-id="@Model.ProjectID">Delete</a>
                                <a class="btn btn-md btn-secondary" asp-action="Index">Back to List</a>
                            </div>
                        </div>
                    </form>
                    <!-- #endregion -->
                    
    @*Edit Relation Data: ProjectLinks, Collaborators(UserProjects), ProjectPostings*@
            <!-- #region Relation Project Link Add/Remove Buttons -->
            <section>
                <h3>Project Links & Collaborators</h3>
                @{
                    foreach (var person in Model.currentProject.UserProjects)
                    {
                        if (person.UserID == currentUser)
                        {
                            loggedOn = true;
                        }
                    }

                    foreach (var item in Model.currentProject.ProjectLinks.Where((i => i.Projects.ProjectID == Model.ProjectID)))
                    {
                        <div class="col-sm-2">
                            @Html.DisplayFor(model => item.ProjectLinkLabel)
                        </div>
                        <div class="col-sm-10">
                            @Html.DisplayFor(model => item.ProjectLinkUrl)
                        </div>

                        if (loggedOn == true)
                        {
                            <form asp-action="DeleteLink" asp-controller="Projects">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="form-group">
                                    <input type="hidden" asp-for="ProjectID" class="form-control" value="@Model.ProjectID" name="projectID" />
                                </div>
                                <div class="form-group">
                                    <input type="hidden" asp-for="@item.ProjectLinkID" class="form-control" value="@item.ProjectLinkID" name="projectLinkID" />
                                </div>
                                <div class="form-group">
                                    <input type="submit" value="Remove this Link" class="btn btn-md btn-danger" />
                                </div>
                            </form>

                        }

                    }
                }
            </section>
            <!-- #endregion -->
            <!-- #region Relation Collaborators: UserProjecct Add/Remove Buttons-->
            <section>
                @foreach (var collab in Model.currentProject.UserProjects)
                {
                    var collabPath = "~/image/" + (collab.User.PhotoPath);
                    var collabMemberPath = "https://localhost:44359/Users/Details/" + (collab.User.Id);

                    @*@collab.User.UserName<br />*@
                    <a href="@collabMemberPath"><img class="small-thumbnail" src=" @collabPath" alt="@Html.DisplayFor(modelItem => collab.User.UserName)" asp-append-version="true" /></a>
                    if (loggedOn == true)
                    {
                        <form asp-action="Delete" asp-controller="UserProjects">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <input type="hidden" asp-for="ProjectID" class="form-control" value="@Model.ProjectID" name="projectID" />
                            </div>
                            <div class="form-group">
                                <input type="hidden" asp-for="@collab.UserID" class="form-control" value="@collab.UserID" name="collabId" />
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Remove from this Projects" class="btn btn-md btn-danger" />
                            </div>
                        </form>
                    }
                }
            </section>
            <!-- #endregion -->
            <!--#region Relation ProjectPostings-->
            <section>
                @{  //if the collaborator has postings and others want to add that posting to the project
                    @foreach (var collaborator in Model.currentProject.UserProjects)
                    {
                        //if user has no postings do not create an empty form
                        var postingListholder = Model.Postings.Where(i => i.PostingOwner.Id == collaborator.UserID);
                        if (!(postingListholder.Any()) || addShown == true)
                        {
                            continue;
                        }
                        <p>Select postings owned by Collaborator @collaborator.User.UserName to be added to this Project</p>
                        <form asp-action="CreateManyProjectPostings" asp-controller="ProjectPostings">
                            @foreach (var posting in postingListholder)
                            {
                                if (addShown == true)
                                {
                                    continue;
                                }
                                //If the posting is already in the Project Posting it will not display for checkbox choices
                                kickOut = false;
                                foreach (var projPost in Model.ProjectPostings.Where(i => i.PostingID == posting.PostingID && i.ProjectID == Model.ProjectID))
                                {
                                    kickOut = true;
                                }
                                if (kickOut == true)
                                {
                                    continue;
                                }
                                @*Shows all postings that a collaborator has which are not added to the Project and displays checkboxes so that many postings can be added to a project at once*@
                            assigned = false;
                                    @:<div>
                                        <input type="checkbox" name="postings" value="@posting.PostingID" @(Html.Raw((assigned) ? "checked=\"checked\"" : "")) /> @posting.PostingTitle 
                                    @:</div>                                
                            }
                            <div class="form-group mb-0">
                                <input type="hidden" value="@Model.ProjectID" class="form-control" name="projectID" />
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Link selected Posting" class="btn btn-md btn-danger" />
                            </div>                            
                        </form>
                        addShown = true;
                    }
                  }

                @{
                    @foreach (var collaborator in Model.currentProject.UserProjects)
                    {
                        var postingListholder = Model.Postings.Where(i => i.PostingOwner.Id == collaborator.UserID);
                        var projectPostingHolder = Model.ProjectPostings;
                        //if user has no postings do not create an empty form
                        if (!(postingListholder.Any()) || deleteShown == true)
                        {
                            continue;
                        }
                        @*Shows all postings that a collaborator has which are not added to the Project and displays checkboxes so that many postings can be added to a project at once*@
                        @foreach (var posting in postingListholder)
                        {
                            kickOut = true;
                            foreach (var projPost in projectPostingHolder.Where(i => i.PostingID == posting.PostingID && i.ProjectID == Model.ProjectID))
                            {
                                kickOut = false;
                            }
                            if (kickOut == true || deleteShown == true)
                            {
                                continue;
                            }
                            <p>Collaborator @collaborator.User.UserName owns these postings which are connected to the Project</p>
                            <p>Select from the postings list below to remove them from this project.</p>
                            <form asp-action="RemoveManyPostings" asp-controller="ProjectPostings">
                                @{
                                    foreach (var projPost in projectPostingHolder.Where(i => i.ProjectID == Model.ProjectID))
                                    {
                                        @:<div>
                                            <input type="checkbox" name="postings" value="@posting.PostingID" @(Html.Raw((assigned) ? "checked=\"checked\"" : "")) /> @posting.PostingTitle @posting.PostingFor
                                        @:</div>
                                    }
                                }
                                <div class="form-group mb-0">
                                    <input type="hidden" value="@Model.ProjectID" class="form-control" name="projectID" />
                                </div>
                                <div class="form-group">
                                    <input type="submit" value="Remove selected postings" class="btn btn-md btn-danger" />
                                </div>                                
                            </form>
                                        deleteShown = true;
                                    }
                                    }
                                    }
            </section>
               
                  <!--#endregion-->

                <div class="card-footer">
                    <a class="btn btn-md btn-secondary" asp-action="Index">Back to List</a>
                </div>
         </div>
     </div>
 }
            @*CSS CODE FOR INDIVISUAL CARDS ENDS HERE*@
        else
        {
            <!-- #region not a collaborator-->

            <div class="d-flex shadow padding text-center">
                <h2>You are not part of this project and do not have permission to Edit it. Connect with the members of the project if you want to be part of it.</h2>
            </div>
            @foreach (var collab in Model.currentProject.UserProjects)
            {
                var collabPath = "~/image/" + (collab.User.PhotoPath);
                var collabMemberPath = "https://localhost:44359/Users/Details/" + (collab.User.Id);
                <div>
                    <a href="@collabMemberPath"><img class="small-thumbnail" src=" @collabPath" alt="@Html.DisplayFor(modelItem => collab.User.UserName)" asp-append-version="true" /></a>
                    <a href="@collabMemberPath">@Html.DisplayFor(modelItem => collab.User.FirstName)  @Html.DisplayFor(modelItem => collab.User.LastName)  : @Html.DisplayFor(modelItem => collab.User.UserName)</a>
                </div>
            }
            <div>
                <a class="btn btn-md btn-secondary" asp-action="Index">Back to List</a>
            </div>
            <!-- #endregion -->
        }

<!--#region Javascript-->
@section Scripts {
    <script>
        $(document).ready(function () {
            $('.custom-file-input').on("change", function () {
                var fileName = $(this).val().split("\\").pop();
                $(this).next('.custom-file-label').html(fileName);
            });
        });
    </script>
    <script>
        function add_collab() {
            document.getElementById("demo").innerHTML += "<input list='user-list'   name='selectedCollaborators'> ";
        }
    </script>
    <script>
        function add_fields() {
            document.getElementById("linkDemo").innerHTML += "<h2>Link Label</h2><input list='contact-link-label' name='createdLinkLabels'><h2>Link URL</h2> <input list='contact-link-url' name='createdLinkUrls'>";

        }
    </script>

    @*@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}*@
}
<!-- #endregion -->