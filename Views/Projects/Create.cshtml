@* Create Project Page should be accesible from each user page and should be itegrated into thenavigation bar - it should automatically create a collaborator from the current user ID *@
@model ConstellationWebApp.ViewModels.ProjectCreateViewModel

@{
    ViewData["Title"] = "Create a Project";
}
<link rel="stylesheet" href="~/css/project-create-edit.css" />


<div class="project-create-container">
    <h3 class="titleBorder">Create New Project</h3>
    <div class="card shadow">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StartDate" class="control-label"></label>
                <input asp-for="StartDate" class="form-control" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndDate" class="control-label"></label>
                <input asp-for="EndDate" class="form-control" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="Photo" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <div class="custom-file">
                        <input asp-for="Photo" class="form-control custom-file-input" />
                        <label class="custom-file-label">Choose File ...</label>
                    </div>
                </div>
            </div>
            @*Adding collaborators*@
            <div class="form-group add-collab">
                <div class="col-md-offset-2 col-md-12">
                    <datalist id="user-list">
                        @{
                            List<ConstellationWebApp.Models.AssignedProjectData> usersCollab = ViewBag.UsersOfConstellation;

                            foreach (var user in usersCollab)
                            {
                                <option value="@user.UserName" data-id="@user.UserID"></option>
                            }
                        @:</datalist>
                    @:</div>
                        }
                    </div>
                    <input class="input-group rounded border-light col-md-12" list="user-list" name="selectedCollaborators">
                    <div id="demo"></div>
                    <input class="text-light bg-secondary border-white rounded mt-1" type="button" id="more_fields" onclick="add_collab();" value="Add Collaborator" />

                    @* Adding Contact Links*@
                    <div class="form-group add-link">
                        <div class="px-0 col-md-12 small_lable">
                            <p class="mb-0 mt-1">Link Label</p>
                            <input class="input-group rounded border-light col-md-12" list='contact-link-label' name='createdLinkLabels'>
                            <p class="mb-0 mt-1">Link URL</p>
                            <input class="input-group rounded border-light col-md-12" list='contact-link-url' name='createdLinkUrls'>
                            <div id="linkDemo"></div>
                            <input class="text-light bg-secondary border-white rounded mt-1" type="button" id="more_fields" onclick="add_fields();" value="Add Link" />
                        </div>
                    </div>
                    <div class="card-footer">
                        <div class="form-group">
                            <input type="submit" value="Create" class="btn btn-sm btn-primary" />
                            <a class="btn btn-sm btn-secondary" asp-action="Index">Back to List</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>


        @section Scripts {
            <script>
                $(document).ready(function () {
                    $('.custom-file-input').on("change", function () {
                        var fileName = $(this).val().split("\\").pop();
                        $(this).next('.custom-file-label').html(fileName);
                    });
            </script>
      
            <script>
                function add_collab() {
                    document.getElementById("demo").innerHTML += "<input class='input-group' list='user-list'   name='selectedCollaborators'> ";
                }
            </script>
            <script>
                function add_fields() {
                    document.getElementById("linkDemo").innerHTML += "<p class='mb-0 mt-1 rounded border-light'>Add Link Label</p><input class='input-group' list='contact-link-label' name='createdLinkLabels'><p class='mb-0 mt-1 rounded border-light'>Add Url Link</p><input class='input-group' list='contact-link-url' name='createdLinkUrls'>";
                }
            </script>
        }
