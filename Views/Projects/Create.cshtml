                        </div>

                        <input list="user-list" name="selectedCollaborators">
                 
                        <div id="demo"></div>
                        <input type="button" id="more_fields" onclick="add_fields();" value="Add Collaborator" />

                        <div class="form-group">
                            <input type="submit" value="Create" class="btn btn-primary" />
                        </div>
